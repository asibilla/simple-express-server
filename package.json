{
  "name": "express-server",
  "version": "1.0.0",
  "description": "A server to run locally",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "build": "webpack --watch",
    "server": "nodemon index.js",
    "dev": "concurrently \"npm run server\" \"npm run build\"",
    "jest": "jest",
    "test": "npm run jest",
    "covreport": "open coverage/lcov-report/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asibilla/simple-express-server.git"
  },
  "author": "Andy Sibilla",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/asibilla/simple-express-server/issues"
  },
  "homepage": "https://github.com/asibilla/simple-express-server#readme",
  "dependencies": {
    "cors": "^2.8.4",
    "css-loader": "^1.0.0",
    "express": "^4.16.3",
    "jest": "^23.4.1",
    "jest-junit-reporter": "^1.1.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.0",
    "style-loader": "^0.21.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^3.6.0",
    "dotenv-webpack": "^1.5.7",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "install": "^0.12.1",
    "nodemon": "^1.17.5",
    "npm": "^6.1.0",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.4"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "client/**/*.js",
      "!coverage/**"
    ],
    "coverageReporters": [
      "json",
      "json-summary",
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testResultsProcessor": "./node_modules/jest-junit-reporter"
  }
}
